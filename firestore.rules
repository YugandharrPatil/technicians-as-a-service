rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // Helper function to check if user is technician (from users document)
    function isTechnician() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'technician';
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isOwner(userId);
      // Users can create/update their own profile
      allow create, update: if isOwner(userId);
      // Admins can read all users
      allow read: if isAdmin();
    }

    // Technicians collection
    match /technicians/{technicianId} {
      // Anyone can read visible technicians
      allow read: if resource.data.isVisible == true || isAdmin();
      // Technicians can read their own technician document
      allow read: if isTechnician() && resource.data.userId == request.auth.uid;
      // Only admins can create/update/delete technicians
      allow create, update, delete: if isAdmin();
      // Technicians can update their own technician document (limited fields)
      allow update: if isTechnician() && resource.data.userId == request.auth.uid;
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Clients can read their own bookings
      allow read: if isOwner(resource.data.clientId);
      // Technicians can read bookings assigned to them
      allow read: if isTechnician() && resource.data.technicianId != null &&
                   exists(/databases/$(database)/documents/technicians/$(resource.data.technicianId)) &&
                   get(/databases/$(database)/documents/technicians/$(resource.data.technicianId)).data.userId == request.auth.uid;
      // Clients can create bookings for themselves
      allow create: if isAuthenticated() && request.resource.data.clientId == request.auth.uid;
      // Clients can update their own bookings (limited fields - can't change status from requested to accepted/rejected)
      allow update: if isOwner(resource.data.clientId) && 
                       (!('status' in request.resource.data.diff(resource.data).affectedKeys()) || 
                        (request.resource.data.status == resource.data.status) ||
                        (resource.data.status == 'requested' && request.resource.data.status != 'accepted' && request.resource.data.status != 'rejected'));
      // Technicians can update bookings assigned to them (can accept/reject, update status)
      allow update: if isTechnician() && resource.data.technicianId != null &&
                    exists(/databases/$(database)/documents/technicians/$(resource.data.technicianId)) &&
                    get(/databases/$(database)/documents/technicians/$(resource.data.technicianId)).data.userId == request.auth.uid;
      // Admins can read/update all bookings
      allow read, update: if isAdmin();
    }

    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      // Clients and technicians can create reviews for completed bookings
      allow create: if isAuthenticated() && 
                       ((request.resource.data.reviewerId == request.auth.uid && 
                         request.resource.data.clientId == request.auth.uid) ||
                        (request.resource.data.reviewerId == request.auth.uid && 
                         isTechnician() &&
                         exists(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)) &&
                         get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.technicianId != null &&
                         exists(/databases/$(database)/documents/technicians/$(get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.technicianId)) &&
                         get(/databases/$(database)/documents/technicians/$(get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.technicianId)).data.userId == request.auth.uid)) &&
                       exists(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)) &&
                       get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.status == 'completed';
      // Users can update their own reviews
      allow update: if isOwner(resource.data.reviewerId);
      // Admins can read/update all reviews
      allow read, update: if isAdmin();
    }

    // Chat messages collection
    match /chatMessages/{messageId} {
      // Users can read messages for bookings they're involved in
      allow read: if isAuthenticated() && 
                     exists(/databases/$(database)/documents/bookings/$(resource.data.bookingId)) &&
                     (get(/databases/$(database)/documents/bookings/$(resource.data.bookingId)).data.clientId == request.auth.uid ||
                      (isTechnician() && 
                       get(/databases/$(database)/documents/bookings/$(resource.data.bookingId)).data.technicianId != null &&
                       exists(/databases/$(database)/documents/technicians/$(get(/databases/$(database)/documents/bookings/$(resource.data.bookingId)).data.technicianId)) &&
                       get(/databases/$(database)/documents/technicians/$(get(/databases/$(database)/documents/bookings/$(resource.data.bookingId)).data.technicianId)).data.userId == request.auth.uid));
      // Users can create messages for bookings they're involved in
      allow create: if isAuthenticated() && 
                      request.resource.data.senderId == request.auth.uid &&
                      exists(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)) &&
                      (get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.clientId == request.auth.uid ||
                       (isTechnician() && 
                        get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.technicianId != null &&
                        exists(/databases/$(database)/documents/technicians/$(get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.technicianId)) &&
                        get(/databases/$(database)/documents/technicians/$(get(/databases/$(database)/documents/bookings/$(request.resource.data.bookingId)).data.technicianId)).data.userId == request.auth.uid));
      // Admins can read all messages
      allow read: if isAdmin();
    }
  }
}
